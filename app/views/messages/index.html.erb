<p id="notice"><%= notice %></p>

<% if @conversation.user1 == current_user %>
  <% recipient = User.find(@conversation.user2.id) %>
  <% else %>
  <% recipient = User.find(@conversation.user1.id) %>
<% end %>

<h1 class= "text-center" ><%= recipient.username %></h1>

<br>

<%= link_to 'New Message', new_conversation_message_path(@conversation) %>


<div class=”ui segment”>
 <% @messages.each do |message| %>
  <% if message.content %>
   <% user = User.find(message.sender_id) %>
   <div class=”item”>
    <div class=”content”>
     <div class=”header”><strong><%= user.username %></strong>  
      <div class=”list”>
       <div class=”item”>
        <i class=”right triangle icon”></i>
         <%= message.content %>
      </div>
    </div>
   </div>
 </div>
 <% end %>
<% end %>
</div>
