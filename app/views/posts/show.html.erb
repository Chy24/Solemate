<p id="notice"><%= notice %></p>

<div class = "post-heading">
  <div class="text-center">
    <h1><%= @post.brand.upcase %></h1>
  </div>

  <div class="text-center">
    <h1><%= @post.title.upcase %></h1>
  </div>
</div>

<div class"post-image">
  <div id="carousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carousel" data-slide-to="0" class="active"></li>
      <li data-target="#carousel" data-slide-to="1"></li>
      <li data-target="#carousel" data-slide-to="2"></li>
      <li data-target="#carousel" data-slide-to="3"></li>
      <li data-target="#carousel" data-slide-to="4"></li>
      <li data-target="#carousel" data-slide-to="5"></li>
      <li data-target="#carousel" data-slide-to="6"></li>
    </ol>
    <div class="text-center">
      <div class="carousel-inner">
      <% i = 0 %>
      <% @post.images.each do |image| %>
        <% if i == 0 %>
        <div class="carousel-item active">
          <% i = i + 1 %>
        <%else %>
        <div class="carousel-item">
        <%end%>
        <%=link_to image_tag image.url %>
        </div>
      <%end%>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<div class="col">Asking Price: <%= @post.asking_price %></div> 
<%= form_with(model: @charge) do |f| %> 
  <%= f.hidden_field :video_id %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="<%= @post.brand %> <%= @post.title %>"
          data-email="<%= current_user.email %>"
          data-amount="<%= @post.asking_price %>"
          data-currency="aud"
          data-locale="auto"></script>
<% end %>

<div class="post-info">
  <div class="container" >
    <div class="row">
      <div class="col">Size: <%= @post.size %></div>
      <div class="col">Conditon: <%= @post.condition %></div>
      <div class="w-100"></div>
      <div class="col">Condition: <%= @post.condition %></div>
      <div class="col">Category: <%= @post.category %></div>
      <div class="w-100"></div>
      <div class="col">Shipping: <%= @post.shipping %></div>
      <div class="col">Color: <%= @post.color %></div>
    </div>
  </div>
</div>

<div class="post-description">
  <%= @post.description %>
</div>

<div class="post-contact">
<b><%= @post.user.username %></b>
<br>
<%= link_to "View Profile", current_user  %> | <%= link_to 'Message', new_conversation_path %>
</div>



<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

