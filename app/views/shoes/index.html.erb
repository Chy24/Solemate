<p id="notice"><%= notice %></p>

<h1>Shoes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category/th>
      <th>Brand</th>
      <th>Size</th>
      <th>Description</th>
      <th>Color</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

              
<div class="text-center">
   <% @post.images.each do |image| %>
    <%= image_tag(image.url) %>
    <% end %>
</div>

  <tbody>
    <% @shoes.each do |shoe| %>
      <tr>
        <td><%= shoe.title %></td>
        <td><%= shoe.category %></td>
        <td><%= shoe.brand %></td>
        <td><%= shoe.sex %></td>
        <td><%= shoe.description %></td>
        <td><%= shoe.color %></td>
        <td><%= shoe.rating %></td>
        <td><%= link_to 'Show', shoe %></td>
        <td><%= link_to 'Edit', edit_shoe_path(shoe) %></td>
        <td><%= link_to 'Destroy', shoe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shoe', new_shoe_path %>
