<h1 class="text-center">Support</h1>

<p class="text-center">Please message our support team here:</p>

<%= form_with(url: support_url, local: true) do |f| %>
  <% unless @error_messages.empty? %>
    <% @error_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  <% end %>
  <div class="text-center"> 
    <%= f.label :email %>
    <br>
    <%= f.email_field :email %>
  </div>
  <div class="text-center"> 
    <%= f.label :message %>
    <br>
    <%= f.text_area :message, rows: 6 %>
  </div> 
  <div class="text-center"> 
    <%= f.button 'Send' %>
  </div>
<% end %>