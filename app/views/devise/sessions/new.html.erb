<div class="text-center">
  <h2>Log in</h2>
</div>

<div class='text-center'>
  <p>Don't have account yet?<br><%= link_to("It's easy, create one here", new_user_session_path) %></p>
</div>

<div class="login-form">
  <div class="socialicon">
    <%= image_tag 'facebook-circle-icon' %>
    <%= link_to "Log in with Facebook" %>
    <%= image_tag 'google-circle-icon' %>
    <%= link_to "Log in with Google" %>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <div class="setup-wrapper" >
    <%= bootstrap_form_for(@user) do |f| %>
    <div class='setup-form'>
      <%= f.email_field :email %>
      <%= f.password_field :password %>
      <div class="center-text">
        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      </div>
      <br>
      <%= f.check_box :remember_me %>
      <%= f.submit "Log in", class: "btn btn-link setup-button" %>
    </div>
    <% end %>
  </div>

<% end %>

<% render "devise/shared/links" %>
